<div class="box-label-page">
    <h1>Edição de Curso</h1>


</div>

{{#if major}}

<form class="form" action="/major/update/{{major.id}}" method="post">

    <div class="mb-3">
        <label for="code" class="form-label">Código</label>
        <input type="text" class="form-control" value="{{major.code}}" id="code" name="code" placeholder="IC02">
    </div>
    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" value="{{major.name}}" class="form-control" id="name" name="name"
            placeholder="Ciência da Computação">
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Descrição</label>
        <textarea class="form-control" id="description" name="description" rows="3">
{{major.description}}
        </textarea>
    </div>

    <button class="btn btn-outline-secondary" type="submit">Editar</button>
</form>


{{/if}}

